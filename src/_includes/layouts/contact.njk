layout: layouts/base.njk
---

{% include "partials/hero.njk" %}

<section class="contact">
  <header class="contact-header">
    <h1>Get in Touch</h1>
    <p>Have a project, idea, or collaboration in mind? Let’s talk.</p>
  </header>

  <div class="contact-grid">
    <div class="contact-info">
      <h3>Contact Details</h3>
      <ul>
        <li><strong>Email:</strong> <a href="mailto:{{ site.email }}">{{ site.email }}</a></li>
        <li><strong>LinkedIn:</strong> <a href="{{ site.social.linkedin }}" target="_blank">Connect</a></li>
        <li><strong>GitHub:</strong> <a href="{{ site.social.github }}" target="_blank">Projects</a></li>
      </ul>

      <p class="contact-note">
        I’m always open to freelance work, design partnerships, or full-time opportunities.
      </p>
    </div>

    <div class="contact-form">
      <h3>Send a Message</h3>
      <form name="contact" method="POST" data-netlify="true" class="form">
        <input type="hidden" name="form-name" value="contact">
        <div class="form-group">
          <label for="name">Your Name</label>
          <input id="name" type="text" name="name" required>
        </div>
        <div class="form-group">
          <label for="email">Your Email</label>
          <input id="email" type="email" name="email" required>
        </div>
        <div class="form-group">
          <label for="message">Message</label>
          <textarea id="message" name="message" rows="6" required></textarea>
        </div>
        <button type="submit" class="btn">Send Message</button>
      </form>
    </div>
  </div>
</section>
